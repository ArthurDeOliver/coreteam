datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Employee {
  cpf      String         @id
  name     String
  salary   Float
  role     String
  teams    EmployeeTeam[] // Relação com EmployeeTeam
}

model Team {
  id          Int          @id @default(autoincrement())
  name        String
  description String?
  employees   EmployeeTeam[] // Relação com EmployeeTeam
}

model EmployeeTeam {
  employeeCpf String
  teamId      Int

  employee    Employee @relation(fields: [employeeCpf], references: [cpf])
  team        Team     @relation(fields: [teamId], references: [id])

  @@id([employeeCpf, teamId]) // Índice composto para relação N:N
}
